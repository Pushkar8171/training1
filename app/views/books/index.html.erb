
<h1 style="color: DarkSlateGray; text-align: center;">Books Listing Page</h1>
<%= image_tag 'library.jpeg', alt: 'Library', style: 'display: block; margin: 0 auto;' %>


<table border="1" style="border-collapse: collapse; width: 100%;">
  <thead>
  <%= form_with url: "/search", method: :get do |form| %>
    <%= form.label :query, "Search for:" %>
    <%= form.text_field :query %>
    <%= form.submit "Search" %>
    <%= link_to "Search", Show,book  %>
  <% end %>
  
    <tr>
      <th style="background-color: LightSteelBlue; padding: 8px;">Title</th>
      <th style="background-color: LightSteelBlue; padding: 8px;">Publishing Year</th>
      <th style="background-color: LightSteelBlue; padding: 8px;">ISBN</th>
      <th style="background-color: LightSteelBlue; padding: 8px;">Price</th>
      <th style="background-color: LightSteelBlue; padding: 8px;">Stock</th>
      <th style="background-color: LightSteelBlue; padding: 8px;">Views</th>
      <th colspan="3" style="background-color: LightSteelBlue; padding: 8px; text-align: center;">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td style="padding: 8px;"><%= book.title %></td>
        <td style="padding: 8px;"><%= book.year_published %></td>
        <td style="padding: 8px;"><%= book.isbn %></td>
        <td style="padding: 8px;"><%= book.price %></td>
        <td style="padding: 8px;"><%= book.out_of_print %></td>
        <td style="padding: 8px;"><%= book.views %></td>
        <td style="border: 2px solid MediumSeaGreen; padding: 8px;"><%= link_to "Show", book %></td>
        <td style="border: 2px solid MediumSeaGreen; padding: 8px;"><%= link_to "Edit", edit_book_path(book) %></td>
        <td style="border: 2px solid Tomato; padding: 8px;"><%= link_to "Destroy", book, data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


<p style="color: MediumSeaGreen; text-align: center;"><%= link_to "New book", new_book_path %></p>

 