<h1>Books Listing Page</h1>


<table border = 1>
  <thead>
    <tr>
      <th>Title</th>
      <th>Publishing Year</th>
      <th>ISBN</th>
      <th>Price</th>
      <th>Stock</th>
      <th>Views</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.year_published %></td>
        <td><%= book.isbn %></td>
        <td><%= book.price %></td>
        <td><%= book.out_of_print %></td>
        <td><%= book.views %></td>
        <td style="border:2px solid MediumSeaGreen;"><%= link_to "Show", book %></td>
        <td style="border:2px solid MediumSeaGreen;"><%= link_to "Edit", edit_book_path(book) %></td>
        <td style="border:2px solid Tomato;"><%= link_to "Destroy", book, data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<p style="color:MediumSeaGreen;"><%= link_to "New book" , new_book_path  %></p>
